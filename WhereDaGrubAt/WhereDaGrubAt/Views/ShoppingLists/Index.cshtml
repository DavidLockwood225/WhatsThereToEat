@model WhereDaGrubAt.Models.ShoppingListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Shopping List</h1>

<p>
    <a asp-action="Create">Add New Item</a>
</p>
<form asp-controller="ShoppingLists" asp-action="Index" method="get">
    <p>
        Shopping List: <select asp-for="ListTitle" asp-items="Model.ListNames">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.List[0].ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.List[0].ItemDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.List[0].ItemQuantity)
                </th>
                <th>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemQuantity)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.Checked)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-action="SaveList" asp-route-id="@item.Id">Save to List</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
