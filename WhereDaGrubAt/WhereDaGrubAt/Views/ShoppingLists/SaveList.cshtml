@model WhereDaGrubAt.Models.ShoppingList

@{
    ViewData["Title"] = "SaveList";
}

<h1>Save to Shopping List</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ItemName" />
            <input type="hidden" asp-for="ItemDescription" />
            <input type="hidden" asp-for="ItemQuantity" />
            <input type="hidden" asp-for="Checked" />
            <div class="form-group">
                <label asp-for="ListTitle" class="control-label"></label>
                <input asp-for="ListTitle" class="form-control" />
                <span asp-validation-for="ListTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}